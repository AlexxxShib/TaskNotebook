<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/numberRow"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:padding="8dp"
        android:text="11."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff585858"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff585858" />

        <TextView
            android:id="@+id/descriptionRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="#ff848484"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/root_buttons"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/remove"
                android:text="@string/abc_action_remove"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/edit"
                android:text="@string/abc_action_edit"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/done"
        android:button="@drawable/circle_checkbox"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>