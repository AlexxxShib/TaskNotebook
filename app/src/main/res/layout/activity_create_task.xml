<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.shibkov.tasknotebook.app.activities.CreateTaskActivity">

    <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"/>

    <EditText
            android:id="@+id/headerEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:singleLine="true"
            android:hint="@string/abc_edit_header_hint"
            />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/date_button"
            android:text="17/04/1992"
            android:textSize="16sp"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <!--<Button
            android:id="@+id/time_button"
            android:text="13:00"
            android:textSize="16sp"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />-->

    </LinearLayout>

    <EditText
            android:id="@+id/descriptionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:background="@null"
            android:hint="@string/abc_edit_description_hint"/>

</LinearLayout>
